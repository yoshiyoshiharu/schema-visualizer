<%= turbo_frame_tag 'table', data: { turbo_action: 'advance' } do %>
  <span class="badge rounded-pill text-bg-secondary fs-6 mb-2 mt-3">
    <%= @table.product.name %> / <%= @table.name %>
  </span>
  <div class="container-fluid">
    <div class="row bg-light fw-bold border-bottom p-2 text-break">
      <div class="col-2">Name</div>
      <div class="col-2">Type</div>
      <div class="col-1">Key</div>
      <div class="text-center col-1">Nullable</div>
      <div class="col-2">Comment</div>
      <div class="col-4">
        <div class="row">
          <div class="col-8">Memo</div>
          <div class="col-4 text-center">Edit</div>
        </div>
      </div>
    </div>
    <%= render @table.columns %>
  </div> 
<% end %>
