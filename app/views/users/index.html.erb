<div class="d-flex justify-content-between">
  <h1>ユーザー一覧</h1>
  <%= link_to 'ユーザー作成', new_user_path, class: 'btn btn-primary h-100' %>
</div>
<table class="table">
  <thead>
    <th><%= t '.name' %></th>
    <th><%= t '.email' %></th>
    <th><%= t '.is_admin' %></th>
    <th><%= t '.action' %></th>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.is_admin %></td>
        <td>
          <%= link_to '編集', edit_user_path(user), class: 'btn btn-primary' %>
          <%= link_to '削除', user_path(user), class: 'btn btn-danger',
                                             data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
